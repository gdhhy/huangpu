    <insert id="insertUploadFile" flushCache="true" useGeneratedKeys="true" keyProperty="pojo.fileID">
        INSERT INTO UploadFile (fileID, filename, path, contentType, size, uploadTime, serverPath, serverFilename)
        VALUES (#{pojo.fileID:INTEGER}, #{pojo.filename:VARCHAR}, #{pojo.path:VARCHAR}, #{pojo.contentType:VARCHAR}, #{pojo.size:INTEGER},
                #{pojo.uploadTime:TIMESTAMP},#{pojo.serverPath:VARCHAR},#{pojo.serverFilename:VARCHAR})
    </insert>
    <delete id="deleteUploadFile" parameterType="int">
        DELETE
        FROM UploadFile
        WHERE fileID = #{fileID:INTEGER}
    </delete>

